import org.generation.exceptions.EmailFormatException;
import org.generation.util.Employee;
import org.generation.util.Person;

public class TestPerson {

	public static void main(String[] args) {
		Person martin = null;
		Person mafer = null;
		
		try {
		mafer = new Employee("Mafer Hernández", 21, "mafer@GMAIL.com", "Conocido", 
				"HEGM010101XYZ", "IT", 500.50);
		mafer.setAge(15);
		} catch (EmailFormatException e) {
			//e.printStackTrace();
			System.out.println(e.getMessage());
		}
		
		try {
		martin = new Employee("Martín Núñez", 22, "123456789@facultad.unam.mx", "Casa",
				"XAXX000000001", "IT", 389.20);
		} catch (EmailFormatException e) {
			//e.printStackTrace();
			System.out.println(e.getMessage());
		}
		
		
//		martin.name = "Martín Núñez";
//		martin.age = 22;
//		martin.email="martin@gmail.com";
		System.out.println(martin.toString());
		System.out.println(mafer);
	}//main
}//class TestPerson
